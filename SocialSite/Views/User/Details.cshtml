@model SocialSite.Dto.User.DetailsViewModel;

@{
    ViewData["Title"] = "Strona główna";
}

<div class="row mt-3 mx-auto">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <div class="h5">@Model.ApplicationUser.FirstName @Model.ApplicationUser.LastName</div>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <div class="h6 text-muted">Znajomych</div>
                    <div class="h5">@(Model.ApplicationUser.FriendOf.Count + Model.ApplicationUser.Friends.Count)</div>
                </li>
                <li class="list-group-item">
                    <div class="h6 text-muted">Postów</div>
                    <div class="h5">@Model.Posts.Count</div>
                </li>
                @if (Model.IsAlreadyFriends)
                {
                    <li class="list-group-item">
                        <a class="btn btn-primary" asp-controller="User" asp-action="RemoveFriend" asp-route-friendId="@Model.ApplicationUser.Id">Usuń z grona znajomych</a>
                    </li>
                }
                else
                {
                    <li class="list-group-item">
                        <a class="btn btn-primary" asp-controller="User" asp-action="AddFriend" asp-route-friendId="@Model.ApplicationUser.Id">Dodaj znajomego</a>
                    </li>
                }
            </ul>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <div class="h5">Znajomi</div>
            </div>
            <ul class="list-group">
                @foreach (var friend in Model.ApplicationUser.FriendOf)
                {
                    <li class="list-group-item">
                        <a asp-controller="User" asp-action="Details" asp-route-id="@friend.ApplicationUser.Id">
                            @friend.ApplicationUser.FirstName @friend.ApplicationUser.LastName
                        </a>
                    </li>
                }

                @foreach (var friend in Model.ApplicationUser.Friends)
                {
                    <li class="list-group-item">
                        <a asp-controller="User" asp-action="Details" asp-route-id="@friend.Friend.Id">
                            @friend.Friend.FirstName @friend.Friend.LastName
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="col-md-6">
        @foreach (var post in Model.Posts)
        {
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="mr-2">
                                <img class="rounded-circle" width="45" src="https://picsum.photos/50/50" alt="">
                            </div>
                            <div class="ml-2">
                                <div class="h5 m-0">@post.ApplicationUser.FirstName @post.ApplicationUser.LastName</div>
                                <div class="h7 text-muted">@post.CreatedOn</div>
                            </div>
                        </div>
                        <div>
                            <div class="dropdown">
                                <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-ellipsis-h"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="gedf-drop1">
                                    <div class="h6 dropdown-header">Co chcesz zrobić?</div>
                                    <a class="dropdown-item" asp-controller="Post" asp-action="Edit" asp-route-id="@post.Id">Edytuj</a>
                                    <a class="dropdown-item" asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id">Usuń</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <div class="text-muted h7 mb-2"> <i class="fa fa-clock-o"></i>10 min ago</div>
                    <a class="card-link" href="#">
                        <h5 class="card-title">@post.Title</h5>
                    </a>

                    <p class="card-text">@post.Content</p>
                </div>
                <div class="card-footer">
                    <div class="row px-4 pb-4">
                        <a href="#" class="card-link"><i class="fa fa-gittip"></i> Daj like</a>
                        <a href="#" class="card-link"><i class="fa fa-comment"></i> Skomentuj</a>
                    </div>

                    @foreach (var comment in post.Comments)
                    {
                        <div class="row">
                            <div class="col-auto">
                                <img src="//placehold.it/50" class="img-fluid" alt="">
                            </div>
                            <div class="col">
                                <div class="card-block">
                                    <h4 class="h5">
                                        @comment.ApplicationUser.FirstName @comment.ApplicationUser.LastName

                                        @if (comment.ApplicationUser.UserName == User.Identity.Name)
                                        {
                                            <a class="h6" asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id">
                                                Usuń
                                            </a>
                                        }
                                    </h4>
                                    <p class="">@comment.Content</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row">
                            <div class="col-md-12">
                                <form asp-controller="Comment" asp-action="Create" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <input type="hidden" asp-for="CommentCreateRequest.PostId" value="@post.Id" />

                                    <div class="form-group">
                                        <textarea asp-for="CommentCreateRequest.Content" class="form-control"></textarea>
                                        <span asp-validation-for="CommentCreateRequest.Content" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <button class="btn btn-primary" type="submit">Skomentuj</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                </div>
            </div>
        }
    </div>
</div>
