@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-md-6 offset-md-3">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Manage">Ustawienia profilu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Manage/Email">Ustawienia emaila</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Identity/Account/Manage/ChangePassword">Zmiana hasła</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required :false)

<script>
    $(function () {
        const current = location.pathname;

        $('.nav-tabs li a').each(function () {
            const $this = $(this);

            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        });
    });
</script>
}